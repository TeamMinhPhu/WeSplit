<Page x:Class="WeSplitProject.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeSplitProject"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1100"
      Title="DetailPage"
      Loaded="Page_Loaded">
    <StackPanel>
        <Button Width="100" HorizontalAlignment="Left">
            <materialDesign:PackIcon Kind="KeyboardReturn"></materialDesign:PackIcon>
        </Button>
        <DataGrid x:Name="members" IsReadOnly="True" AutoGenerateColumns="False" Padding="0" Margin="0">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseUp" Handler="Row_DoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding MEMBER_NAME}" Header="Tên"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding MEMBER_ID}" MaxWidth="0" Header="ID"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding PHONE}" Header="Điện thoại"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding EMAIL}" Header="Email"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding EXPEND}" Header="Chi tiêu"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
